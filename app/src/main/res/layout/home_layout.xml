<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent"
    android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin"
    tools:context=".HomeActivity"
    android:background="@color/colorAccent"
    android:layoutDirection="ltr">

    <ImageView
        android:id="@+id/app_icon_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/login_btn"
        android:layout_marginTop="49dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/app_name_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/app_icon_img"
        android:layout_below="@+id/app_icon_img"
        android:text="Welcome to DAS."
        android:textColor="#ffff"
        android:textSize="30sp" />

    <Button
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/login_btn"
        android:layout_marginTop = "55dp"
        android:layout_below = "@+id/app_name_login"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        android:background="@drawable/login_etxt_shape"
        android:padding="10dp"
        android:text="Log In"
        android:textColor="@color/colorAccent"
        android:textAllCaps="false"
        android:textSize="17sp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_btn"
        android:layout_below="@+id/login_btn"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/login_btn"
        android:layout_alignEnd="@+id/login_btn"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="Create Account"
        android:textColor="#ffff"
        android:textAllCaps="false"
        android:textSize="17sp"
        style="@style/register_theme"

        />

    <TextView
        android:id="@+id/options_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/app_icon_img"
        android:layout_below="@+id/register_btn"
        android:text="More Options"
        android:textColor="#ffff"
        android:textSize="18sp"
        android:layout_marginTop="45dp"
        />

    <TextView
        android:id="@+id/terms_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/app_icon_img"
        android:layout_below="@+id/options_view"
        android:text="By tapping Continue Or Create Account
you agree to DAS Terms Of Service."
        android:textColor="#ffff"
        android:textSize="15sp"
        android:layout_marginTop="25dp"
        />


</RelativeLayout>