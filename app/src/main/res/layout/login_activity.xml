<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity"
    android:background="@color/colorAccent">

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back"
        android:background="@color/fui_transparent"
        android:id="@+id/back_btn"
        />

    <ImageView
        android:id="@+id/app_icon_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/login_btn"
        android:layout_marginTop="55dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/app_name_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/app_icon_img"
        android:layout_below="@+id/app_icon_img"
        android:text="Log In"
        android:textColor="#fff"
        android:textSize="28sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name_login"
        android:id="@+id/email_view"
        android:textColor="#fff"
        android:text="Email Address"
        android:layout_marginTop="30dp"
        android:textAllCaps="true"
        />

    <EditText
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/user_email"
        android:layout_marginTop = "2dp"
        android:layout_below = "@+id/email_view"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        android:padding="15dp"
        android:backgroundTint="#fff"
        android:textColor="#fff"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/cursor_color"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_email"
        android:id="@+id/pwd_view"
        android:textColor="#fff"
        android:text="Password"
        android:layout_marginTop="25dp"
        android:textAllCaps="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/user_pwd"
        android:layout_below="@+id/pwd_view"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/user_email"
        android:layout_alignEnd="@+id/user_email"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#fff"
        android:textColor="#fff"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/cursor_color"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="13dp"
        android:backgroundTint="#fff"
        android:src="@drawable/ic_right"
        />

</RelativeLayout>